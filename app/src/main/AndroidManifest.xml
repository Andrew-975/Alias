                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.andrew_975.alias.MainActivity" />
        </activity>
        <activity
            android:name=".EditActivity"
            android:label="Alias"
            android:parentActivityName=".DictionaryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.andrew_975.alias.DictionaryActivity" />
