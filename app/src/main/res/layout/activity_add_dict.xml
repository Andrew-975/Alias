<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.andrew_975.alias.AddDictActivity"><![CDATA[
    tools:context="com.example.andrew_975.alias.Swipe">

    ]]>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/backBut"
        android:background="@drawable/drawable"
        android:onClick="onClickBackToDict"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/editList"
        android:clickable="true"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/dictName"
        android:layout_toRightOf="@+id/backBut"
        android:layout_above="@+id/editTextDel"
        android:layout_marginBottom="20dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDel"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editList"
        android:layout_alignStart="@+id/editList"
        android:layout_alignRight="@+id/editList"
        android:layout_alignEnd="@+id/editList"
        android:hint="Слово..."
        android:singleLine="true"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/dictName"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:focusableInTouchMode="true"
        android:layout_alignLeft="@+id/editList"
        android:layout_alignStart="@+id/editList"
        android:hint="Имя словаря"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:singleLine="true"/>


</RelativeLayout>
