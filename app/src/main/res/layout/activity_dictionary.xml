<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:clickable="false"
    android:id="@+id/dicts">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Словари"
        android:id="@+id/dict"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Импортировать из файла"
        android:id="@+id/button"
        android:textSize="17dp"
        android:layout_below="@+id/deleteButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/backButton"
        android:background="@drawable/drawable"
        android:layout_above="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickBack" />

    <ListView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/listView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dict"
        android:clickable="true"
        android:choiceMode="singleChoice"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/editButton"
        android:background="@drawable/pencil"
        android:onClick="onClickEdit"
        android:clickable="true"
        android:enabled = "true"
        android:layout_below="@+id/listView"
        android:layout_alignLeft="@+id/dict"
        android:layout_alignStart="@+id/dict"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/deleteButton"
        android:background="@drawable/delete"
        android:clickable="true"
        android:layout_alignTop="@+id/editButton"
        android:layout_alignRight="@+id/dict"
        android:layout_alignEnd="@+id/dict"
        android:onClick="onClickDelete" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:textSize="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/deleteButton"
        android:layout_alignEnd="@+id/deleteButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Добавить словарь:"
        android:id="@+id/textView9"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginTop="65dp"/>


</RelativeLayout>
