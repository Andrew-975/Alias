<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.andrew_975.alias.EditActivity"
    android:id="@+id/edits">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" "
        android:id="@+id/editName"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/backBut"
        android:background="@drawable/drawable"
        android:onClick="onClickBackToDict"
        android:layout_alignBottom="@+id/editName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/addWords"
        android:textSize="30dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignLeft="@+id/editTextAdd"
        android:layout_alignStart="@+id/editTextAdd"
        android:layout_marginTop="106dp"
        android:hint="Удалить..."
        android:singleLine="true"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAdd"
        android:textSize="30dp"
        android:layout_marginTop="101dp"
        android:hint="Добавить..."
        android:singleLine="true"
        android:layout_below="@+id/editName"
        android:layout_toLeftOf="@+id/imageButton"
        android:layout_toStartOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/deleteBut"
        android:background="@drawable/delete"
        android:clickable="true"
        android:layout_alignBottom="@+id/addWords"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:onClick="onClickDel" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:clickable="true"
        android:background="@drawable/ok"
        android:onClick="onClickOk"
        android:layout_alignTop="@+id/editTextAdd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
