<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.andrew_975.alias.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Настройки"
        android:id="@+id/settings"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/back"
        android:layout_toEndOf="@+id/back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/back"
        android:background="@drawable/drawable"
        android:layout_alignBottom="@+id/settings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:onClick="onClickSettingsToMain" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Звук:"
        android:id="@+id/sound"
        android:layout_marginTop="92dp"
        android:checked="true"
        android:textSize="30dp"
        android:layout_below="@+id/settings"
        android:layout_alignLeft="@+id/vibro"
        android:layout_alignStart="@+id/vibro"
        android:layout_alignRight="@+id/settings"
        android:layout_alignEnd="@+id/settings"
        android:layout_marginRight="20dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вибро:"
        android:id="@+id/vibro"
        android:layout_marginTop="58dp"
        android:checked="true"
        android:textSize="30dp"
        android:layout_below="@+id/sound"
        android:layout_alignRight="@+id/settings"
        android:layout_alignEnd="@+id/settings"
        android:layout_alignLeft="@+id/settings"
        android:layout_alignStart="@+id/settings"
        android:layout_marginRight="20dp" />
</RelativeLayout>
