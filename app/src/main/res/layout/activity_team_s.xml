<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_weight="1"
    tools:context="com.example.andrew_975.alias.TeamS">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/teams"
        android:id="@+id/textView3"
        android:textSize="50dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/teamNameEditText"
        android:textSize="30dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_below="@+id/teamsListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:editable="true"
        android:singleLine="true"
        android:hint="@string/enterTeamName" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/ready"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:id="@+id/button6"
        android:onClick="onClickBackToGame"
        android:layout_below="@+id/teamNameEditText"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:singleLine="false" />

    <ListView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:id="@+id/teamsListView"
        android:clickable="true"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
